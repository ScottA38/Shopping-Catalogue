{
	"name": "srmes/shopping-app-test",
	"description": "Developer test. Basic OO-orientated PHP webapp",
	"require-dev":	{
		"phpunit/phpunit":"~9.0",
		"squizlabs/php_codesniffer": "~3.0"
	},
	"require": {
		"doctrine/orm": "~2.7"
	},
	"autoload" : {
		"classmap": ["src/", "src/Models/"],
		"psr-0": {
            "WebApp\\": "src/",
			"WebApp\\Models\\": "src/Models/"
         }
	},
    "autoload-dev" : {
		"classmap": ["tests/", "tests/Models/"],
        "psr-0": {
            "WebApp\\Tests\\" : "tests/"
        }
    }
}
